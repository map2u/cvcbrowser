<script >
    function initLeftsidebarPanel() {
        $.ajax({
            url: Routing.generate('homepage_leftsidebar_view',{_locale:"{{app.request.locale}}",id: "{{id}}",view: "{{view}}"}),
            method: 'GET',
            success: function (response) {
               $("div#leaflet_content.overlay-sidebar #sidebar_content").html(response);
            }
        });
    }
    
</script>